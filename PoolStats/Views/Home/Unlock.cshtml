@{
    ViewBag.Title = "Enter Pin";

    var invalidPin = false;

    if (ViewData["InvalidPin"] == null)
    {
        invalidPin = false;
    }
    else
    {
        if (((bool)ViewData["invalidPin"]))
        {
            invalidPin = true;
        }
    }
}

<script>
    function enterNumbers(number) {
        if (number == "clear") {
            document.getElementById("ePin").value = "";
        }
        else {
            var txt = document.getElementById("ePin").value;
            txt = txt + number;
            document.getElementById("ePin").value = txt;
        }
    }
</script>

<script>
    var el = document.getElementById('mainImage');
    el.parentNode.removeChild(el);
</script>


@using (Html.BeginForm("ValidatePin", "Home", FormMethod.Post, new { @encType = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <fieldset>

        <div class="form-horizontal" style="text-align: center;">
            <br />
            <h4>
                Enter PIN to Unlock
            </h4><br />

            @if (invalidPin)
            {
                <span style="color: red;">PIN Incorrect. Please try again</span>
                <br /><br />
            }

            <div class="form-group">

                <div class="col-md-10" style="padding-top: 10px; text-align: center;">


                    <table style="text-align: center; width: 100%;">
                        <tr>
                            <td style="text-align: center; width: 100%;">
                                @Html.Password("ePin", "", new { htmlAttributes = new { @class = "form-control", @style = "text-align: center;" } })
                            </td>
                        </tr>
                    </table>
                    <br />

                    <div style="margin-bottom: -16px;">
                        <input id="btn1" type="button" value="1" onclick="enterNumbers('1')" class="btn btn-default" style="text-align: center; width: 50px; height: 50px; font-size: 15pt;" />
                        <input id="btn2" type="button" value="2" onclick="enterNumbers('2')" class="btn btn-default" style="text-align: center; width: 50px; height: 50px; font-size: 15pt;" />
                        <input id="btn3" type="button" value="3" onclick="enterNumbers('3')" class="btn btn-default" style="text-align: center; width: 50px; height: 50px; font-size: 15pt;" />
                    </div>
                    <br />
                    <div style="margin-bottom: -16px;">
                        <input id="btn4" type="button" value="4" onclick="enterNumbers('4')" class="btn btn-default" style="text-align: center; width: 50px; height: 50px; font-size: 15pt;" />
                        <input id="btn5" type="button" value="5" onclick="enterNumbers('5')" class="btn btn-default" style="text-align: center; width: 50px; height: 50px; font-size: 15pt;" />
                        <input id="btn6" type="button" value="6" onclick="enterNumbers('6')" class="btn btn-default" style="text-align: center; width: 50px; height: 50px; font-size: 15pt;" />
                    </div>
                    <br />
                    <div style="margin-bottom: 4px;">
                        <input id="btn7" type="button" value="7" onclick="enterNumbers('7')" class="btn btn-default" style="text-align: center; width: 50px; height: 50px; font-size: 15pt;" />
                        <input id="btn9" type="button" value="8" onclick="enterNumbers('8')" class="btn btn-default" style="text-align: center; width: 50px; height: 50px; font-size: 15pt;" />
                        <input id="btn9" type="button" value="9" onclick="enterNumbers('9')" class="btn btn-default" style="text-align: center; width: 50px; height: 50px; font-size: 15pt;" />
                    </div>
                    <div style="margin-bottom: -10px;">
                        <input id="btn0" type="button" value="0" onclick="enterNumbers('0')" class="btn btn-default" style="text-align: center; width: 50px; height: 50px; font-size: 15pt;" />
                        <input id="btnClear" type="button" value="Clear" onclick="enterNumbers('clear')" class="btn btn-default" style="text-align: center; width: 104px; height: 50px; font-size: 15pt;" />
                    </div>
                    <br /><br />

                    <input type="submit" value="Enter" class="btn btn-default" style="width: 104px; height: 50px; font-size: 15pt;" />
                </div>

                @if (invalidPin)
                {
                    <br />
                    <span style="color: red;">PIN Incorrect. Please try again</span>
                }
            </div>
        </div>
    </fieldset>
}

<br />
<div style="text-align: center;">
    @Html.ActionLink("Back to List", "BackLocked", new { id = "" })
</div>

