            output.setAttribute("style", "-moz-transform:rotate(0deg); -webkit-transform:rotate(0deg); -o-transform:rotate(0deg); -ms-transform:rotate(0deg); width: 200px;");
            rotateVal.value = '0';
        }
        else if (rotateVal.value == "90") {
            output.setAttribute("style", "-moz-transform:rotate(0deg); -webkit-transform:rotate(0deg); -o-transform:rotate(0eg); -ms-transform:rotate(0deg); width: 200px;");
